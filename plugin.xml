<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://github.com/robbresearch/crosswalk_data_migration"
        id="com.unit11apps.CrosswalkDataMigration"
        version="1.0.0">

  <name>Crosswalk data migration</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/CrosswalkDataMigration.js" target="js/CrosswalkDataMigration.js"/>

  <js-module src="www/CrosswalkDataMigration.js" name="CrosswalkDataMigration">
    <clobbers target="CrosswalkDataMigration" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="CrosswalkDataMigration">
        <param name="android-package" value="com.unit11apps.plugin.CrosswalkDataMigration"/>
      </feature>
    </config-file>

    <source-file src="src/android/CrosswalkDataMigration.java" target-dir="src/com/CrosswalkDataMigration/plugin/"/>
  </platform>

  <platform name="ios">
    
    <config-file target="config.xml" parent="/widget">
      <feature name="Hello">
        <param name="ios-package" value="HWPHello" />
      </feature>
    </config-file>

    <header-file src="src/ios/HWPHello.h" target-dir="HelloPlugin"/>
    <source-file src="src/ios/HWPHello.m" target-dir="HelloPlugin"/>
  </platform>

  <platform name="wp7">
    <source-file src="src/wp7/Hello.cs"/>
  </platform>

</plugin>